{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true, // Allow a partial TypeScript and JavaScript codebase.
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2017"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "jsx": "react"
  },
  "include": [
    "./apollo/**/*",
    "./components/**/*",
    "./forms/**/*",
    "./modals/**/*",
    "./lib/**/*",
    "./pages/**/*",
    "./types/**/*"
  ]
}
