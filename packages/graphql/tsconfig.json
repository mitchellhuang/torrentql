{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": false,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "strictNullChecks": true
  },
  "include": [
    "./src/**/*"
  ]
}
